<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotesCrossPlatform.Views.Settings"
             Title="Settings">
    
    <ContentPage.Content>


        <StackLayout Orientation="Vertical">

            <StackLayout Orientation="Vertical" VerticalOptions="StartAndExpand" Padding="10,10,10,10">
                <Label Text="Welcome to Xamarin.Forms!" HorizontalOptions="Center" FontSize="Medium"/>
                <Button Text="Drop all data" HorizontalOptions="Center" Clicked="dropButton_Clicked"/>
                <Button Text="Create test data" HorizontalOptions="Center" Clicked="createButton_Clicked"/>
                <Button Text="Rate us!" HorizontalOptions="Center" Clicked="rateUsButton_OnClicked"></Button>
            </StackLayout>

            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand" Padding="10,10,10,10">
                <Label Text="Settings" FontSize="Medium" HorizontalOptions="End"/>
            </StackLayout>

        </StackLayout>

    </ContentPage.Content>
</ContentPage>